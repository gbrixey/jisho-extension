{
    "manifest_version": 3,
    "name": "Jisho Extension",
    "version": "0.3",
    "description": "Quickly search on Jisho.org",
    "action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
